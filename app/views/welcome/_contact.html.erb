<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading"><span style="padding: 6px 12px; background: rgba(255,255,255, 0.9); border-radius: 13px; color: black; font-weight: 400;">Contact Us</span></h2>
                <h3 class="section-subheading text-muted"></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <%= form_with url: contact_form_path, id: "contactForm", method: :post, novalidate: "novalidate" do |form| %>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <%= form.text_field :name, class: "form-control", placeholder: "Your Name *", id: "name", required: true %>
                            </div>
                            <div class="form-group">
                                <%= form.text_field :email, class: "form-control", placeholder: "Your Email *", id: "email", required: true %>
                            </div>
                            <div class="form-group">
                                <%= form.text_field :tel, class: "form-control", placeholder: "Your Phone *", id: "phone", required: true %>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                            <%= form.text_area :name, class: "form-control", placeholder: "Your Message *", id: "message", required: true %>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            
                              <%= form.submit "Send Message", class: "btn btn-xl" %>
                        </div>
                    </div>
                <!-- </form> -->
                <% end %>
            </div>
        </div>
    </div>
</section>